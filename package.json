{
  "name": "hello-webpack",
  "version": "1.0.0",
  "description": "hello-webpack",
  "author": "Brandon Patterson",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && NODE_ENV=production webpack -p",
    "clean": "rimraf public/*.js && rimraf public/*.css",
    "deploy": "npm run build && surge public",
    "start": "npm run clean && NODE_ENV=development webpack-dev-server -d --client-log-level warning --open --port 3000"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.2.3",
    "autoprefixer": "^8.6.5",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.5",
    "css-loader": "^0.28.11",
    "eslint": "^4.18.2",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.5",
    "node-sass": "^4.11.0",
    "postcss-loader": "^2.1.6",
    "rimraf": "^2.6.3",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "stylelint": "^9.10.0",
    "stylelint-config-sass-guidelines": "^5.3.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brandnpatterson/hello-webpack.git"
  },
  "browserslist": [
    "last 2 versions"
  ]
}
